<h1>Welcome to my message store!</h1>
<ul>
  <% @messages.each do |message| %>
      <li>
        <h2><a href="/messages/<%= message.id %>"><%= message.message %></a>
        <form onsubmit="return confirm('Are you sure you want to delete this message?')" method="POST" action="/messages/<%= message.id %>">
          <button type="submit">Delete This Message Immediatly </button>
        </form>
        </h2>
        <!--<form> <input type="submit" value="Delete Message after 1 hour" /></form>-->
      </li>
  <% end %>
</ul>
